{% macro featureItem(icon, title, text, link) %}
<div class="ivideon-feature__item">
    <div class="ivideon-feature__item-img">
        <img src="{{icon}}" alt="{{title}}">
    </div>
    {% if title %}
    <p class="ivideon-feature__item-title">
        {{title}}
    </p>
    {% endif %}
    <p class="ivideon-feature__item-text">
        {{text}}
    </p>
    {% if link %}
    <a href="#" class="ivideon-feature__item-link">
        {{link}}
    </a>
    {% endif %}
</div>
{% endmacro %}