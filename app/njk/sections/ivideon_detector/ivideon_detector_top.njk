<section class="ivideon-detector-top">
    <div class="iv-container iv-container--ivideon-detector-top">
        <div class="ivideon-detector-top__wrapper">
            <div class="ivideon-detector-top__text-wrapper">
                <h1 class="ivideon-detector-top__title">{{ivDetectorTopTitle}}</h1>
                <p class="ivideon-detector-top__text">{{ivDetectorTopText}}</p>
                <div class="ivideon-detector-top__btn-wrapper">
                    <a href="#" class="btn-blue ivideon-detector-top__btn">{{ivDetectorTopBtnBlue}}</a>
                    <a href="#" class="btn-white ivideon-detector-top__btn">{{ivDetectorTopBtnWhite}}</a>
                </div>
            </div>
        </div>
    </div>
    <div class="ivideon-detector-top__img-block">
        <picture>
            <source srcset="../../images/dest/img/ivideon-detector/videon-detector-top-img-d.svg"
                media="(min-width: 1024px)">
            <source srcset="../../images/dest/img/ivideon-detector/videon-detector-top-img-t.svg"
                media="(min-width: 768px)">
            <img class="ivideon-detector-top__img-main"
                src="../../images/dest/img/ivideon-detector/videon-detector-top-img-m.svg" alt="{{ivCountingTopTitle}}">
        </picture>
    </div>
</section>